{
  "plugin": "Ping",
  "plugin_desc": "The Ping plugin is used to test the reachability of network connections and measure the round-trip time of sending data packets to a target address and back.",
  "status_query": "any({instance_type='ping', collect_type='ping'}) by (instance_id)",
  "name": "Ping",
  "icon": "wangzhan1",
  "type": "Web",
  "description": "",
  "default_metric": "any({instance_type='ping'}) by (instance_id)",
  "instance_id_keys": ["instance_id"],
  "supplementary_indicators": ["ping_average_response_ms", "ping_percent_packet_loss", "ping_result_code"],
  "metrics": [
    {
      "metric_group": "Ping",
      "name": "ping_average_response_ms",
      "query": "ping_average_response_ms{__$labels__}",
      "display_name": "Average Response Time",
      "data_type": "Number",
      "unit": "ms",
      "dimensions": [
        {
          "name": "agent_id",
          "description": "agent_id"
        }
      ],
      "instance_id_keys": ["instance_id"],
      "description": "Average response time of ICMP Ping requests, reflecting average network latency"
    },
    {
      "metric_group": "Ping",
      "name": "ping_maximum_response_ms",
      "query": "ping_maximum_response_ms{__$labels__}",
      "display_name": "Maximum Response Time",
      "data_type": "Number",
      "unit": "ms",
      "dimensions": [
        {
          "name": "agent_id",
          "description": "agent_id"
        }
      ],
      "instance_id_keys": ["instance_id"],
      "description": "Maximum response time of ICMP Ping requests, reflecting peak network latency"
    },
    {
      "metric_group": "Ping",
      "name": "ping_minimum_response_ms",
      "query": "ping_minimum_response_ms{__$labels__}",
      "display_name": "Minimum Response Time",
      "data_type": "Number",
      "unit": "ms",
      "dimensions": [
        {
          "name": "agent_id",
          "description": "agent_id"
        }
      ],
      "instance_id_keys": ["instance_id"],
      "description": "Minimum response time of ICMP Ping requests, reflecting best-case network latency"
    },
    {
      "metric_group": "Ping",
      "name": "ping_percent_packet_loss",
      "query": "ping_percent_packet_loss{__$labels__}",
      "display_name": "Packet Loss Percentage",
      "data_type": "Number",
      "unit": "percent",
      "dimensions": [
        {
          "name": "agent_id",
          "description": "agent_id"
        }
      ],
      "instance_id_keys": ["instance_id"],
      "description": "Percentage of ICMP packet loss, reflecting network connection stability"
    },
    {
      "metric_group": "Ping",
      "name": "ping_result_code",
      "query": "ping_result_code{__$labels__}",
      "display_name": "Result Code",
      "data_type": "Enum",
      "unit": "[{\"name\":\"成功\",\"id\":0,\"color\":\"#1ac44a\"},{\"name\":\"错误\",\"id\":1,\"color\":\"#ff4d4f\"},{\"name\":\"无法解析\",\"id\":2,\"color\":\"#ff4d4f\"}]",
      "dimensions": [
        {
          "name": "agent_id",
          "description": "agent_id"
        }
      ],
      "instance_id_keys": ["instance_id"],
      "description": "Result code of Ping test, indicating success or failure status of Ping operation"
    },
    {
      "metric_group": "Ping",
      "name": "ping_ttl",
      "query": "ping_ttl{__$labels__}",
      "display_name": "Time To Live",
      "data_type": "Number",
      "unit": "none",
      "dimensions": [
        {
          "name": "agent_id",
          "description": "agent_id"
        }
      ],
      "instance_id_keys": ["instance_id"],
      "description": "Time To Live value of received ICMP response packets, reflecting number of network hops"
    }
  ]
}
