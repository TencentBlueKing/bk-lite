# ============================================
# 模型加载配置
# ============================================
# 可选值: dummy | local | mlflow
MODEL_SOURCE=dummy

# 本地模型配置 (当 MODEL_SOURCE=local 时使用)
# 示例: D:/Work/bk-lite/algorithms/mlruns/1/<run_id>/artifacts/model
# 注意: 必须指向 MLflow 模型目录（包含 MLmodel 文件）
MODEL_PATH=/path/to/local/mlflow_model

# MLflow 配置 (当 MODEL_SOURCE=mlflow 时使用)
MLFLOW_TRACKING_URI=http://localhost:5000
# 示例: models:/yolov11_detection/1 或 models:/yolov11_detection/Production
MLFLOW_MODEL_URI=models:/yolov11_detection/production

# ============================================
# 日志配置
# ============================================
# 可选值: TRACE | DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# ============================================
# BentoML 服务配置
# ============================================
# 服务监听地址
BENTOML_HOST=0.0.0.0
BENTOML_PORT=3000

# 工作进程数
BENTOML_WORKERS=1

# 请求超时(秒)
BENTOML_TIMEOUT=60

# 批量预测配置
MAX_BATCH_SIZE=100
