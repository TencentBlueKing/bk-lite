{
  "model": {
    "type": "YOLODetection",
    "name": "yolo_detection"
  },
  "hyperparams": {
    "_comment": "核心训练超参数",
    "model_name": "yolo11n.pt",
    "epochs": 100,
    "optimizer": "SGD",
    "device": "auto",
    "amp": true,
    "patience": 50,
    
    "_comment_tuning": "超参数优化配置（可选）",
    "_comment_tuning_note": "如果定义了search_space，对应参数将使用搜索空间而非固定值",
    "max_evals": 50,
    "metric": "mAP50-95",
    "search_space": {
      "_comment": "搜索空间定义：列表中第一个值将作为默认值",
      "lr0": [0.001, 0.01, 0.05],
      "batch": [8, 16, 32],
      "imgsz": [416, 512, 640]
    },
    
    "_comment_no_tuning": "如不需要超参数优化，设置 max_evals=0 并定义固定值",
    "_example_fixed_values": {
      "imgsz": 640,
      "batch": 16,
      "lr0": 0.01
    }
  },
  "preprocessing": {
    "min_image_size": 32,
    "allowed_extensions": [".jpg", ".jpeg", ".png", ".bmp"]
  },
  "feature_engineering": {
    "_comment": "数据增强配置（YOLO自动处理，通常保持默认即可）",
    "augmentation_enabled": true
  },
  "mlflow": {
    "experiment_name": "object_detection_training"
  }
}
