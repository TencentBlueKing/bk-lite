{
  "model": {
    "type": "gradient_boosting",
    "name": "timeseries_gb_model",
    "version": "1.0.0"
  },
  "hyperparams": {
    "sarima": {
      "search": {
        "enabled": true,
        "max_evals": 50,
        "metric": "rmse",
        "early_stopping": {
          "enabled": true,
          "patience": 15,
          "loss_cap_multiplier": 5.0
        },
        "search_space": {
          "order": {
            "p": [0, 1, 2],
            "d": [0, 1, 2],
            "q": [0, 1, 2]
          },
          "seasonal_order": {
            "P": [0, 1, 2],
            "D": [0, 1],
            "Q": [0, 1, 2],
            "s": [12]
          },
          "trend": ["n", "c", "t", "ct"]
        }
      },
      "fixed": {
        "order": [
          1,
          1,
          1
        ],
        "seasonal_order": [
          1,
          1,
          1,
          12
        ],
        "trend": "c"
      }
    },
    "gradient_boosting": {
      "search": {
        "enabled": true,
        "max_evals": 50,
        "metric": "rmse",
        "early_stopping": {
          "enabled": true,
          "patience": 15,
          "loss_cap_multiplier": 5.0
        },
        "search_space": {
          "n_estimators": [50, 100, 200, 300],
          "learning_rate": [0.01, 0.05, 0.1, 0.2],
          "max_depth": [3, 5, 7, 10],
          "min_samples_split": [2, 5, 10],
          "min_samples_leaf": [1, 2, 4],
          "subsample": [0.7, 0.8, 0.9, 1.0],
          "lag_features": [6, 12]
        }
      },
      "fixed": {
        "n_estimators": 100,
        "learning_rate": 0.1,
        "max_depth": 3,
        "min_samples_split": 2,
        "min_samples_leaf": 1,
        "subsample": 1.0,
        "lag_features": 12,
        "random_state": 42,
        "use_feature_engineering": true
      }
    }
  },
  "training": {
    "test_size": 0.2,
    "validation_size": 0.0,
    "epochs": 100,
    "batch_size": 32
  },
  "preprocessing": {
    "handle_missing": "interpolate",
    "max_missing_ratio": 0.3
  },
  "feature_engineering": {
    "enabled": false,
    "lag_periods": [
      1,
      2,
      3,
      7,
      14,
      30
    ],
    "rolling_windows": [
      7,
      14,
      30
    ],
    "rolling_features": [
      "mean",
      "std",
      "min",
      "max"
    ],
    "use_temporal_features": true,
    "use_cyclical_features": true,
    "use_diff_features": false
  },
  "mlflow": {
    "tracking_uri": null,
    "experiment_name": "timeseries_training"
  }
}