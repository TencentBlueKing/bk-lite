# Stargazer 环境变量配置示例
# 复制此文件为 .env 并修改为实际配置

# ============ Redis 配置 ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# NATS Metric Topic
NATS_METRIC_TOPIC=metrics

# Redis 连接池配置（生产环境重要）
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5
REDIS_MAX_RETRY=3

# ============ 任务队列配置 ============
# Worker 最大并发任务数（根据服务器性能调整）
TASK_MAX_JOBS=10

# 单个任务超时时间（秒）- 根据采集任务复杂度调整
TASK_JOB_TIMEOUT=300

# 任务失败重试次数
TASK_MAX_TRIES=3

# 任务结果保留时间（秒）
TASK_KEEP_RESULT=3600

# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30

# ============ NATS 配置 ============
NATS_SERVERS=nats://localhost:4222
NATS_USERNAME=your_nats_username
NATS_PASSWORD=your_nats_password
# NATS_PROTOCOL=tls
# NATS_TLS_CA_FILE=/path/to/ca.pem

# NATS 实例 ID（注册时拼接为 {NATS_INSTANCE_ID}_stargazer，默认 default）
NATS_INSTANCE_ID=default
