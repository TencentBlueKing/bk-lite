{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Sanic Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uv",
            "args": [
                "run",
                "sanic",
                "server:bootstrap",
                "--factory",
                "--debug",
                "--host=0.0.0.0",
                "--port=18082"
            ],
            "env": {
                "TRANSFORMERS_OFFLINE": "true",
                "HF_DATASETS_OFFLINE": "1"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}